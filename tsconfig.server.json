{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"incremental": true,
		"noEmitOnError": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"removeComments": true,
		"strict": true,
		"outDir": "dist/server",
		"lib": ["ES6"],
		"module": "CommonJS",
		"target": "ES6"
	},
	"compileOnSave": true,
	"include": ["src/server"]
}
